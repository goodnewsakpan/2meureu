<ActivityScreenView>
    name: 'activity screen'
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "20dp", "20dp", "20dp", 0
        MDBoxLayout:
            spacing: "10dp"
            adaptive_height: True
            MDLabel:
                text: "Child Activities"
                font_style: "Headline"
                adaptive_height: True
                theme_line_height: "Custom"
                line_height: 1
                pos_hint: {"center_y": .5}
            MDIconButton:
                icon: "account-outline"
                pos_hint: {"center_y": .5}
        MDScrollView:
            bar_width: 0
            MDList:
                id: container
                spacing: "20dp"
                padding: 0, 0, 0, "100dp"